<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Game Envy</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/games" Match="NavLinkMatch.All">
                <span class="fa fa-gamepad mr-3" aria-hidden="true"></span> Games
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/riotgames" Match="NavLinkMatch.All">
                <span class="fa fa-gamepad mr-3" aria-hidden="true"></span> Riot Games
            </NavLink>
        </li>
        <AuthorizeView Roles="Administrator">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/manage" Match="NavLinkMatch.All">
                <span class="fa fa-user-cog mr-3" aria-hidden="true"></span> Admin Panel
            </NavLink>
        </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
